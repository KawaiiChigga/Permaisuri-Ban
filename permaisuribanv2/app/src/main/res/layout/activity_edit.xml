<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".modules.main.account.edit.EditActivity"
    android:fillViewport="true">

    <ImageView
        android:id="@+id/ivProfileEdit"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/ic_user2" />

    <EditText
        android:id="@+id/etEmailEdit"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivProfileEdit"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:inputType="text"
        android:maxLines="1" />

    <TextView
        android:id="@+id/tvFirstNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivProfileEdit"
        android:layout_marginTop="130dp"
        android:text="First name" />

    <EditText
        android:id="@+id/etNameEdit"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivProfileEdit"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:inputType="text"
        android:maxLines="1" />

    <TextView
        android:id="@+id/tvLastNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivProfileEdit"
        android:layout_marginTop="200dp"
        android:text="Last name" />

    <EditText
        android:id="@+id/etPhoneEdit"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivProfileEdit"
        android:layout_alignParentTop="true"
        android:layout_marginTop="280dp"
        android:inputType="text"
        android:maxLines="1" />

    <TextView
        android:id="@+id/tvPhoneEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivProfileEdit"
        android:layout_marginTop="270dp"
        android:text="Phone" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/etAddressEdit"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivProfileEdit"
        android:layout_alignParentTop="true"
        android:layout_marginTop="350dp"
        android:hint="DD/MM/YYYY"
        android:inputType="text"
        android:maxLines="1"
        app:errorEnabled="true"/>

    <TextView
        android:id="@+id/tvDOBEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivProfileEdit"
        android:layout_marginTop="340dp"
        android:text="Date of birth"
        />

        <Button
            android:id="@+id/btnSaveEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="0dp"
            android:text="Save changes"
            android:textColor="@color/colorP4"
            android:background="@color/colorP2"/>


    </RelativeLayout>