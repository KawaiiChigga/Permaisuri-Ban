<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#FFFFFF"
    tools:context=".modules.auth.register.RegisterActivity">


    <ImageView
        android:id="@+id/ivLongLogo"
        android:layout_width="@dimen/width_long_logo"
        android:layout_height="@dimen/height_long_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo_300_100" />

    <ImageView
        android:id="@+id/ivRegEmail"
        android:layout_width="@dimen/width_icon"
        android:layout_height="@dimen/height_icon"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="207dp"
        app:srcCompat="@drawable/ic_email" />

    <ImageView
        android:id="@+id/ivRegFirstname"
        android:layout_width="@dimen/width_icon"
        android:layout_height="@dimen/height_icon"
        android:layout_alignStart="@+id/ivRegEmail"
        android:layout_alignLeft="@+id/ivRegEmail"
        android:layout_alignTop="@+id/etRegFirstname"
        android:layout_alignParentTop="true"
        android:layout_marginTop="263dp"
        app:srcCompat="@drawable/ic_firstname" />

    <ImageView
        android:id="@+id/ivRegIdNo"
        android:layout_width="@dimen/width_icon"
        android:layout_height="@dimen/height_icon"
        android:layout_alignStart="@+id/ivRegFirstname"
        android:layout_alignLeft="@+id/ivRegEmail"
        android:layout_alignTop="@+id/etRegIdNo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="319dp"
        app:srcCompat="@drawable/ic_identification" />

    <ImageView
        android:id="@+id/ivRegUsername"
        android:layout_width="@dimen/width_icon"
        android:layout_height="@dimen/height_icon"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/etRegUsername"
        android:layout_alignLeft="@+id/ivRegEmail"
        android:layout_alignStart="@+id/ivRegIdNo"
        android:layout_marginTop="375dp"
        app:srcCompat="@drawable/ic_username" />

    <ImageView
        android:id="@+id/ivRegPassword"
        android:layout_width="@dimen/width_icon"
        android:layout_height="@dimen/height_icon"
        android:layout_alignParentTop="true"
        android:layout_marginTop="431dp"
        android:layout_alignStart="@+id/ivRegUsername"
        app:srcCompat="@drawable/ic_password" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/etRegEmail"
        android:layout_width="@dimen/width_et_register"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:hint="email"
        android:inputType="textPersonName"
        app:errorEnabled="true"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/etRegFirstname"
        android:layout_width="@dimen/width_et_register"
        android:layout_height="wrap_content"
        android:layout_below="@id/etRegEmail"
        android:layout_alignLeft="@+id/etRegEmail"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="first name"
        android:inputType="textPersonName"
        app:errorEnabled="true"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/etRegIdNo"
        android:layout_width="@dimen/width_et_register"
        android:layout_height="wrap_content"
        android:layout_below="@id/etRegFirstname"
        android:layout_alignLeft="@+id/etRegEmail"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="citizen id"
        android:inputType="textPersonName"
        app:errorEnabled="true"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/etRegUsername"
        android:layout_width="@dimen/width_et_register"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etRegEmail"
        android:layout_centerVertical="true"
        android:layout_below="@id/etRegIdNo"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName"
        app:errorEnabled="true"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/etRegPassword"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etRegEmail"
        android:layout_alignTop="@+id/ivRegPassword"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="-8dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        app:errorEnabled="true"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/colorP1"
        android:text="Register"
        android:textColor="#FFFFFF" />

</RelativeLayout>