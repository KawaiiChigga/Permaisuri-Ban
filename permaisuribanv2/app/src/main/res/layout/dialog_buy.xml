<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:minWidth="300dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBuyDialog"
            android:layout_width="51dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/tire_dummy" />

        <TextView
            android:id="@+id/tvBuyDialogPrice"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ivBuyDialog"
            android:layout_centerVertical="true"
            android:text="Rp. 987.654"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tvBuyDialog"
            android:layout_width="140dp"
            android:layout_height="63dp"
            android:layout_alignTop="@+id/ivBuyDialog"
            android:layout_centerHorizontal="true"
            android:text="Ban Forceum Octa Super Credibilis Godzilla"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/ivBuyDialogMinus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="195dp"
            app:srcCompat="@drawable/ic_decrease" />

        <TextView
            android:id="@+id/tvBuyDialogCount"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="219dp"
            android:text="1"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/ivBuyDialogPlus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="250dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_increase" />

        <TextView

            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Tambah barang ke keranjang"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBuyDialogNo"
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:layout_marginLeft="268dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:text="X"
            android:textAllCaps="false"
            android:textSize="22dp" />

        <Button
            android:id="@+id/btnBuyDialogYes"
            android:layout_width="281dp"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="53dp"
            android:background="@color/colorP4"
            android:text="Tambah barang"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnBuyDialogYesGo"
            android:layout_width="281dp"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:background="@color/colorP1"
            android:text="Tambah dan lanjut ke pembayaran"
            android:textAllCaps="false"
            android:textColor="@color/colorP4" />

    </RelativeLayout>
</FrameLayout>