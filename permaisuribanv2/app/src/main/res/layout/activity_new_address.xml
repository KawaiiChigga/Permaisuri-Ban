<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".modules.main.account.edit.address.NewAddressActivity"
    android:fillViewport="true">

    <EditText
        android:id="@+id/etAddressNew"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:inputType="text"
        android:maxLines="1" />

    <EditText
        android:id="@+id/etPlaceholder3"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:enabled="false"
        android:inputType="text"
        android:maxLines="1" />

    <EditText
        android:id="@+id/etPlaceholder4"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:enabled="false"
        android:inputType="text"
        android:maxLines="1" />


    <TextView
        android:id="@+id/tvAddressNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Address" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinnerProvinceNew"
        android:layout_width="340dp"
        android:layout_height="47dp"
        android:layout_marginTop="140dp"
        android:elevation="4dp"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/tvNewAddressEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="Province"/>


    <TextView
        android:id="@+id/tvConfirmAddressEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:text="Regency"
        />

    <Button
        android:id="@+id/btnSaveAddressNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorP2"
        android:text="Save changes"
        android:textColor="@color/colorP4" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinnerRegencyNew"
        android:layout_width="340dp"
        android:layout_height="47dp"
        android:layout_marginTop="250dp"
        android:spinnerMode="dialog" />


</RelativeLayout>