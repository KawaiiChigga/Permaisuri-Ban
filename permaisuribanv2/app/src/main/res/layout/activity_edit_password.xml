<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".modules.main.account.edit.EditProfileActivity"
    android:fillViewport="true">

    <EditText
        android:id="@+id/etOldPassEdit"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:inputType="textPassword"
        android:maxLines="1"
        />

    <TextView
        android:id="@+id/tvOldPassEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Old password"
        />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/etNewPassEdit"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:inputType="textPassword"
        android:maxLines="1"
        app:errorEnabled="true"/>

    <TextView
        android:id="@+id/tvNewPassEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="New password" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/etConfirmPassEdit"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:inputType="textPassword"
        android:maxLines="1"
        app:errorEnabled="true"/>

    <TextView
        android:id="@+id/tvConfirmPassEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:text="Confirm new password"
        />

    <Button
            android:id="@+id/btnSaveEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="0dp"
            android:text="Save changes"
            android:textColor="@color/colorP4"
            android:background="@color/colorP2"/>


    </RelativeLayout>